func addUser(username, email string) error {
    sqlStatement := ` INSERT INTO users (username, email) VALUES ($1, $2)`
    _, err := db.Exec(sqlStatement, username, email)
    if err != nil {
        return err
    }
    return nil
}

// –ü–æ–ª—É—á–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π
func getUsers() ([]User, error) {
    rows, err := db.Query("SELECT id, username, email FROM users")
    if err != nil {
        return nil, err
