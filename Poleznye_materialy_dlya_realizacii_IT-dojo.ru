var db *sql.DB

func initDB() (*sql.DB, error) {
    dbinfo := fmt.Sprintf(
        "host=%s port=%d user=%s password=%s dbname=%s sslmode=disable",
        "localhost", // –ê–¥—Ä–µ—Å —Å–µ—Ä–≤–µ—Ä–∞ –±–∞–∑ –¥–∞–Ω–Ω—ã—Ö
        5432,        // –ü–æ—Ä—Ç —Å–µ—Ä–≤–µ—Ä–∞ PostgreSQL
